{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2019"
    ],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~utils": [
        "./utils"
      ],
      "~mocks": [
        "./mocks"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "declaration.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "./src/**/*"
    ]
  }
}
